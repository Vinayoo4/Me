{
  "name": "90s-personal-website",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently --names \"BACKEND,FRONTEND\" -c \"bgBlue.bold,bgGreen.bold\" \"npm:dev:server\" \"npm:dev:client\"",
    "dev:client": "cd Frontend && vite",
    "dev:server": "nodemon Backend/server/index.js",
    "build": "cd Frontend && vue-tsc -b && vite build",
    "preview": "cd Frontend && vite preview",
    "server": "node Backend/server/index.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "vue": "^3.4.38",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@types/vue-router": "^2.0.0",
    "@vitejs/plugin-vue": "^5.1.3",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "typescript": "^5.5.3",
    "vite": "^5.4.2",
    "vue-tsc": "^2.1.4"
  }
} 